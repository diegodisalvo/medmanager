<div class="container my-5">
  <div class="row">
    <div class="col-sm-8">
      <h1>Sedi operative</h1>
    </div>
    <div class="col-sm-4 align-self-center">
      <% if allowed_to?(:new?) %>
        <%= link_to 'Aggiungi sede operativa', new_location_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <th>Sede</th>
      <th>Indirizzo</th>
      <th>Link</th>
      <th>Modifica</th>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.title %></td>
          <td><%= location.address %></td>
          <td><%= link_to location_path(location) do %><%= fa_icon 'arrow-right' %><% end %></td>
          <td><%= link_to edit_location_path(location) do %><%= fa_icon 'pencil' %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
